{
  "extends": "./tsconfig.app.json",
  "exclude": [],
  "compilerOptions": {
    "composite": true,
    "lib": [],
    "types": ["node", "jsdom"],
    "module": "es2020",
    "target": "es2020",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "ignoreDeprecations": "5.0",
    "verbatimModuleSyntax": true,
  },
  
  "include": ["src/**/*"],
}
